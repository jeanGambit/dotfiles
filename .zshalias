# Command suffixes
# Pipe output to less pager
alias -g L="| less"

# Pipe output to xclip to copy to clipboard
alias -g X="| xclip -selection c"

# Append output to file  
alias -g T="| tee -a" 

# Grep with line numbers and case-insensitive
alias -g G="| grep -ni" 

# GNU core
# ls
alias ll="ls -l"
alias la="ls -la"
